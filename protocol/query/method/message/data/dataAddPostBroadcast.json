{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/dedis/student_21_pop/master/protocol/query/method/message/data/dataAddPostBroadcast.json",
  "description": "Match a add post broadcast query",
  "type": "object",
  "properties": {
    "object": {
      "const": "post"
    },
    "action": {
      "const": "add"
    },
    "post_id": {
      "description": "message_id of the post message above",
      "type": "string",
      "contentEncoding": "base64"
    },
    "channel": {
      "description": "[String] name of the channel",
      "type": "string",
      "pattern": "^/root(/[^/]+)*$",
      "$comment": "Note: the regex matches a \"/root\" or a \"/root/<channel>\""
    },
    "timestamp": {
      "description": "UNIX Timestamp in UTC of this deletion request",
      "type": "integer",
      "minimum": 0
    }
  },
  "additionalProperties": false,
  "required": ["object", "action", "post_id", "channel", "timestamp"]
}